<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= place.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/places/<%= place._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="place[name]" class="form-control" value="<%= place.name %>">
                </div>
                <div class="form-group">
                    <input type="text" value="<%= place.description %>" name="place[description]" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>  
            <a href="/places/<%= place._id %>">Go Back</a>  
        </div>
    </div>
</div>

<%- include("../partials/footer") %>