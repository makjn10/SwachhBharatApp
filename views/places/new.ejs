<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1 style="text-align: center; margin-top: 40px;">Add a new Dirty Place</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/places" method="post" enctype="multipart/form-data" id="submit-form">
                    <div class="form-group">
                        <input type="text" placeholder="Name" name="name" class="form-control" id="name">
                    </div>
                    <div class="form-group">
                        <input type="file" name="image" class="form-control" accept="image/*" id="image" oninput="showImage()">
                    </div>
                    <div class="form-group">
                        <input type="text" placeholder="Description" name="description" class="form-control" id="description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-block btn-primary">Submit</button>
                    </div>
                </form>  
                <a href="/places">Go Back</a>
            </div>
        </div>
        <div class="col-md-4">
            <div style="width: 100%; margin: 0px;">
                <div class="hello">
                    <p id="noimage">No Image Selected</p>
                    <img src="" alt="" id="ImgTag">
                </div>
            </div>
        </div>        
    </div>
</div>

<script>
    function showImage(){
        document.getElementById("noimage").style.display = "none";
        var input = document.getElementById("image");
        var fReader = new FileReader();
        fReader.readAsDataURL(input.files[0]);
        fReader.onloadend = function(event){
            var img = document.getElementById("ImgTag");
            img.src = event.target.result;
        }
    }
    //AJAX call
    document.getElementById("submit-form").addEventListener("submit", function(event){
        event.preventDefault();

        var image = document.getElementById("image"),
            name = document.getElementById("name").value,
            description = document.getElementById("description").value;

        var data = new FormData();
        data.append("image", image.files[0]);
        data.append("name", name);
        data.append("description", description);
    
        var xhr = new XMLHttpRequest();
        xhr.open("POST", '/places', true);

        xhr.onload = function(){
            if(this.status == 200){
                window.location.href = this.responseText;
            }   
        }
        document.getElementById("loader").style.display = "block";
        console.log(data);
        xhr.send(data);
    });
</script>
<%- include("../partials/footer") %>