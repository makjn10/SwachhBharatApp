<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add new Comment to <%= place.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/places/<%= place.id %>/comments" method="post">
                <div class="form-group">
                    <input type="text" placeholder="Text" name="comment[text]" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>  
            <a href="/places/<%= place.id %>">Go Back</a>  
        </div>
    </div>
</div>

<%- include("../partials/footer") %>