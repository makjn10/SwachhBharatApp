<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/places/<%= place_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input type="text" value="<%= comment.text %>" name="comment[text]" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>  
            <a href="/places/<%= place_id %>">Go Back</a>  
        </div>
    </div>
</div>

<%- include("../partials/footer") %>